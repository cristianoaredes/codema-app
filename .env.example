# CODEMA App Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration (Required)
# Get these from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Service Role Key (for server-side operations)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration (for local development with Docker)
# These are used when running PostgreSQL locally
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/codema_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=codema_dev

# Application Settings
NODE_ENV=development
VITE_APP_NAME="CODEMA - Sistema de Gest√£o"
VITE_APP_URL=http://localhost:8080

# API Configuration (if using external APIs)
# VITE_API_BASE_URL=http://localhost:3000/api

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@codema.app

# Storage Configuration (optional)
# VITE_STORAGE_BUCKET=codema-uploads
# VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes

# Feature Flags (optional)
# VITE_ENABLE_DEMO_MODE=false
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_DEBUG=false

# Security (optional)
# VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
# SESSION_SECRET=your-session-secret-here

# Docker Specific (used in docker-compose)
# COMPOSE_PROJECT_NAME=codema
# DOCKER_BUILDKIT=1

# Development Tools (optional)
# VITE_DEV_SERVER_PORT=8080
# VITE_HMR_PORT=8080
# VITE_HMR_HOST=localhost

# Monitoring (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_LOG_LEVEL=info

# Cache Configuration (optional)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Rate Limiting (optional)
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=900000  # 15 minutes in ms